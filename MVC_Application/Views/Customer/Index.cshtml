@model IEnumerable<MVC_Application.Models.Customer>
@{
    ViewBag.Title = "Customer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customers</h2>

@if (!Model.Any())
{
    <p>No Customers get this movie</p>
}
else
{
    <table class="table table-striped table-responsive table-hover table-bordered">
        <thead>
            <tr>
                <th>
                    Customers
                </th>
                <th>
                    Discount Rate
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach(var cust in Model)
            {
                <tr>
                    <td>
                        @Html.ActionLink(cust.Name, "Details", "Customer", new { id = cust.Id }, null)
                    </td>
                    <td>
                        @cust.MembershipType.Name
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
