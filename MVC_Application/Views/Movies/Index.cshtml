}

<h2>Movies</h2>
<div class="btn btn-primary"><p style="text-decoration-color: white">@Html.ActionLink("New", "New", "Movies")</p></div>


@if (!Model.Any())
{
    <p>No Movies Posted yet</p>
}
else
{
    <table id="movieTable" class="table table-striped table-responsive table-hover table-bordered">
        <thead>
            <tr>
                <th>
                    Movie
                </th>
                <th>
                    Genre
                </th>
                <th>
                    Delete  
                </th>
            </tr>
        </thead>
